# =============================================================================
# RELATE WEB - FRONTEND ENVIRONMENT VARIABLES
# =============================================================================
# 
# This file contains environment variables for the React frontend application.
# Copy this file to .env and fill in the actual values.
# 
# NOTE: Only variables prefixed with VITE_ are accessible in the browser!
# =============================================================================

# -----------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION
# -----------------------------------------------------------------------------

# Node Environment (development/production)
NODE_ENV=development

# Development Server Port
PORT=5173

# -----------------------------------------------------------------------------
# BACKEND API CONFIGURATION
# -----------------------------------------------------------------------------

# Backend API Base URL (REQUIRED)
# This is used by the frontend to communicate with the backend
# Development: http://localhost:8000 or http://127.0.0.1:8000
# Production: https://your-backend-domain.com
VITE_BACKEND_URL=http://localhost:8000

# Backend API Version (Optional)
VITE_API_VERSION=v1

# API Request Timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# FRONTEND FEATURE FLAGS
# -----------------------------------------------------------------------------

# Enable/disable specific frontend features
VITE_ENABLE_SEARCH_SOURCES=true
VITE_ENABLE_STATUS_INDICATOR=true
VITE_ENABLE_THREAD_PERSISTENCE=true
VITE_ENABLE_DARK_MODE=true

# Debug Mode (enables console logging)
VITE_DEBUG_MODE=false

# -----------------------------------------------------------------------------
# UI/UX CONFIGURATION
# -----------------------------------------------------------------------------

# Application Title
VITE_APP_TITLE=Relate

# Application Description
VITE_APP_DESCRIPTION=AI-powered research assistant

# Theme Configuration
VITE_DEFAULT_THEME=light

# Animation Settings
VITE_ENABLE_ANIMATIONS=true

# Auto-scroll behavior
VITE_AUTO_SCROLL=true

# -----------------------------------------------------------------------------
# WEBSOCKET/STREAMING CONFIGURATION
# -----------------------------------------------------------------------------

# WebSocket URL for real-time updates (if implemented)
# VITE_WEBSOCKET_URL=ws://localhost:8000/ws

# Server-Sent Events endpoint
VITE_SSE_ENDPOINT=/chat/stream

# Streaming Configuration
VITE_ENABLE_STREAMING=true
VITE_STREAM_TIMEOUT=300000

# -----------------------------------------------------------------------------
# ANALYTICS & MONITORING
# -----------------------------------------------------------------------------

# Google Analytics ID (Optional)
# VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (Optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# -----------------------------------------------------------------------------
# EXTERNAL INTEGRATIONS
# -----------------------------------------------------------------------------

# External service URLs (if any)
# VITE_EXTERNAL_DOCS_URL=https://docs.yourapp.com
# VITE_SUPPORT_URL=https://support.yourapp.com

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------

# Content Security Policy (CSP) settings
VITE_CSP_ENABLED=false

# Trusted domains for external resources
VITE_TRUSTED_DOMAINS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------------------------------

# Enable React DevTools in production (not recommended)
VITE_ENABLE_REACT_DEVTOOLS=false

# Enable Redux DevTools
VITE_ENABLE_REDUX_DEVTOOLS=false

# Source Maps in Production
VITE_GENERATE_SOURCEMAP=false

# -----------------------------------------------------------------------------
# BUILD CONFIGURATION
# -----------------------------------------------------------------------------

# Build Output Directory
VITE_BUILD_DIR=build

# Public Path (for CDN deployment)
VITE_PUBLIC_PATH=/

# Asset Optimization
VITE_OPTIMIZE_ASSETS=true

# Bundle Analysis
VITE_ANALYZE_BUNDLE=false

# -----------------------------------------------------------------------------
# PRODUCTION DEPLOYMENT
# -----------------------------------------------------------------------------

# Production Backend URL
# Uncomment and update for production deployment
# VITE_BACKEND_URL=https://your-production-backend.com

# CDN URL for static assets
# VITE_CDN_URL=https://your-cdn.com

# Version Information
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIMESTAMP=

# -----------------------------------------------------------------------------
# DOCKER CONFIGURATION
# -----------------------------------------------------------------------------

# Docker-specific settings (when running in container)
# These are typically set by Docker Compose
# PORT=5173
# VITE_BACKEND_URL=http://backend:8000

# -----------------------------------------------------------------------------
# PLATFORM-SPECIFIC VARIABLES
# -----------------------------------------------------------------------------

# Vercel-specific variables
# These are automatically set by Vercel
# VERCEL_URL=your-app.vercel.app
# VERCEL_ENV=production

# Netlify-specific variables
# These are automatically set by Netlify
# NETLIFY_SITE_URL=your-app.netlify.app
# NETLIFY_DEPLOY_URL=deploy-preview.netlify.app

# -----------------------------------------------------------------------------
# TESTING CONFIGURATION
# -----------------------------------------------------------------------------

# Test Environment Variables
# VITE_TEST_BACKEND_URL=http://localhost:8001
# VITE_TEST_MODE=false

# E2E Testing
# VITE_E2E_TEST_USER=test@example.com
# VITE_E2E_TEST_PASSWORD=testpassword123